<div class="articles-list">
  <% @articles.each do |article| %>
    <div class="card m-3">
      <div class="card-header">
        <%= article.created_at.strftime("%Y-%m-%d") %> <span class="text-muted">by <%= article.user.email %></span>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center justify-items-center">
          <h1><%= link_to article.title, article, class: "card-title" %></h1>
          <span class="text-muted italic ml-2">in category <%= article.category %></span>
        </div>
        <% if current_user.present? && current_user == article.user %>
          <%= link_to 'Delete', article_path(article),
                      method: :delete, remote: true,
                      class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>